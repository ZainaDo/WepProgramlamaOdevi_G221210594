@model RandevuModeli
@{
    ViewData["Title"] = "Randevu Al";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center bg-primary text-white rounded-top-4">
                    <h4 class="mb-0">Randevu Al</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="RandevuAl" method="post">

                        <!-- Antrenör -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Antrenör Seç</label>
                            <select asp-for="SecilenAntrenorId"
                                    class="form-select"
                                    required>
                                <option value="">Antrenör seçiniz</option>
                                @foreach (var a in Model.Antrenorler)
                                {
                                    <option value="@a.Id">@a.AdSoyad</option>
                                }
                            </select>
                        </div>

                        <!-- Tarih -->
                        <div class="mb-3">
                            <label class="form-label">Tarih</label>
                            <input type="date"
                                   name="Tarih"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Randevu Oluştur
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
