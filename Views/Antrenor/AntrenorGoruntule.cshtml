@model List<AntrenorModeli>
@{
    ViewData["Title"] = "Antrenörler";
}

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold">Antrenörlerimiz</h2>

    <div class="row g-4">
        @foreach (var a in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm border-0 antrenor-card">

                    <div class="card-body text-center">
                        <img src="/images/trainer.png"
                             class="rounded-circle mb-3"
                             width="90"
                             alt="Antrenör">

                        <h5 class="fw-bold">@a.AdSoyad</h5>

                        <span class="badge bg-success mb-2">
                            @a.Hizmetler
                        </span>

                        <p class="text-muted mt-2">
                            ⏰ @a.MusaitSaatler
                        </p>
                    </div>

                </div>
            </div>
        }
    </div>
</div>
