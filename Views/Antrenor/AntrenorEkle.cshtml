@model TrainerModel

@{
    ViewData["Title"] = "Antrenör Ekle";
}

<h2>Antrenör Ekle</h2>

<form method="post" action="/Antrenor/AntrenorEkle">
    <div>
        <label for="Name">Antrenör Adı:</label>
        <input type="text" id="Name" name="Name" required />
    </div>

    <div>
        <label for="Specialization">Uzmanlık Alanı:</label>
        <input type="text" id="Specialization" name="Specialization" required />
    </div>

    <div>
        <label for="AvailableHours">Müsait Saatler:</label>
        <input type="text" id="AvailableHours" name="AvailableHours" required />
    </div>

    <div>
        <label for="Services">Yapabileceği Hizmetler:</label>
        <input type="text" id="Services" name="Services" required />
    </div>

    <button type="submit">Antrenör Ekle</button>
</form>
