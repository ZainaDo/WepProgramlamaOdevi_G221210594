<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Fitness Center</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body style="background-color:#FAD1D1">

<nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#d63384">
    <div class="container">
        <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">
            Fitness Center
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Antrenor" asp-action="AntrenorEkle">Antrenör Ekle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Antrenor" asp-action="AntrenorGörüntüle">Antrenörler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Randevu" asp-action="RandevuAl">Randevu Al</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @RenderBody()
</div>

<footer class="text-center text-white mt-5 p-3" style="background-color:#111">
    © 2025 - Designed by Zaina Al Dous
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
