            </div>
        </div>

        <!-- HIIT -->
        <div class="col-md-4">
            <div class="card hizmet-card">
                <img src="/images/hiit.jpg" class="card-img-top" alt="HIIT Antrenmanı">
                <div class="card-body">
                    <h5 class="card-title">HIIT Antrenmanı</h5>
                    <p class="card-text">Kısa sürede maksimum yağ yakımı.</p>
                </div>
            </div>
        </div>

        <!-- Zumba -->
        <div class="col-md-4">
            <div class="card hizmet-card">
                <img src="/images/zumba.jpg" class="card-img-top" alt="Zumba">
                <div class="card-body">
                    <h5 class="card-title">Zumba</h5>
                    <p class="card-text">Enerjik dans ile eğlenceli antrenman.</p>
                </div>
            </div>
        </div>

        <!-- Les Mills -->
        <div class="col-md-4">
            <div class="card hizmet-card">
                <img src="/images/lesmills.jpg" class="card-img-top" alt="Les Mills Programı">
